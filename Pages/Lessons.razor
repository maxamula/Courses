@page "/lessons"
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Lessons</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Lessons" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="false" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="false" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@lessons" TItem="Courses.Models.Database.Lesson" RowSelect="@EditRow" RowExpand="@GetChildData">
            <Columns>
                <RadzenDataGridColumn TItem="Courses.Models.Database.Lesson" Property="ID" Title="I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Courses.Models.Database.Lesson" Property="Name" Title="Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Courses.Models.Database.Lesson" Property="Duration" Title="Duration">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Courses.Models.Database.Lesson" Property="Sequence" Title="Sequence">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Courses.Models.Database.Lesson" Property="Course.DepartmentName" Title="Course">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Courses.Models.Database.Lesson" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="lesson">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, lesson)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
            <Template Context="lesson">

            </Template>
        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
